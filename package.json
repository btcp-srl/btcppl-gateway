    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "file-type": "^16.2.0",
    "formidable": "^1.2.2",
    "helmet": "^4.2.0",
    "lzutf8": "^0.5.8",
    "minimist": "^1.2.5",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.7",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
